@model CarRenting.ViewModels.CarFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm("Save", "Cars"))
{
    @Html.ValidationSummary(true, "Please fix this errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=> m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateReleased)
        @Html.TextBoxFor(m => m.DateReleased, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DateReleased)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.GenreId)
            @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "Id", "Name"), "",
           new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.GenreId)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Available)
            @Html.TextBoxFor(m => m.Available, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Available)
        </div>
        @Html.HiddenFor(m => m.Id)
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Save</button>

        }
        @section scripts
        {
            @Scripts.Render("~/bundles/jqueryval")
        }

